{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": { 
      "no-console": "error", //  0 = "off", 1 = "warn", 2 = "error"      
      "no-mixed-spaces-and-tabs": "error"
    }
  }
